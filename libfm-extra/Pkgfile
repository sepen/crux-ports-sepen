# Description: Library extras for file management
#Â URL: https://github.com/lxde/libfm/
# Maintainer: Jose Beneyto, sepen at crux dot nu
# Depends on: gtk3

name=libfm-extra
version=1.4.0
release=1
source=(https://github.com/lxde/libfm/archive/refs/tags/$version.tar.gz \
  disable-gtk-doc.diff)

build() {
  cd libfm-$version

  patch -p1 -i $SRC/disable-gtk-doc.diff

  autoreconf -fi
  sed '/GTK_DOC_CHECK/d' -i configure

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-gtk=3 \
    --with-extra-only

  make
  make DESTDIR=$PKG install
}

